	<log4net debug="false">
		<appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
			<!-- <file type="log4net.Util.PatternString" value="D:\R2library\R2Utilities\Logs\R2Utilities%property{LogName}_app2.log" /> -->
			<file type="log4net.Util.PatternString" value="D:\R2Utilities\Logs\%property{LogName}\R2Utilities_App2.log" />
